{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"lib": ["es2019"],
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": ["*.ts"],
	"exclude": ["node_modules", "dist"]
}
